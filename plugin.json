	"scripts": [
		"public/persona.js",
		"public/modules/autohidingnavbar.min.js",
		"public/modules/quickreply.js"
	],
	"modules": {
		"pulling.js": "node_modules/pulling/build/pulling-drawer.js"
	},
	"acpScripts": [
		"public/admin.js"
	],
